<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_cell_height">

    <ImageView
        android:id="@+id/image"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/tv_date"
        android:layout_marginLeft="@dimen/activity_margin_half"
        android:layout_toRightOf="@+id/image"
        android:layout_toLeftOf="@+id/tv_auto"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin_half"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_toLeftOf="@+id/btn_delete"
        android:layout_marginRight="@dimen/activity_margin_half"
        />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image"
        android:layout_marginLeft="@dimen/activity_margin_half"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_toLeftOf="@+id/btn_delete"
        android:layout_marginRight="@dimen/activity_margin_half"
        android:layout_alignParentBottom="true"
        />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/button_min_width"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_centerVertical="true"
        android:theme="@style/ButtonDelete"
        android:text="@string/delete_button_title"
        />

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivider"
        />


</RelativeLayout>