<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/time"
        android:layout_toLeftOf="@+id/text"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/dialog_me_left_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/time_textview_min_width"
        android:text="13:13"
        android:gravity="right"

        />


    <TextView
        android:id="@+id/text"
        android:layout_marginLeft="@dimen/activity_margin_half"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/profile_image_size"
        android:background="@drawable/talk_2"
        android:textColor="@color/color_bubble_me_text_launcher"
        android:gravity="center_vertical"
        android:text="택배입니다"
        android:layout_alignParentRight="true"

        />



</RelativeLayout>